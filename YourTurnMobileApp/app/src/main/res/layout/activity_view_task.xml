<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="com.example.yourturnmobileapp.ViewTaskActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewTasks"
        android:choiceMode="singleChoice"
        android:divider="#ff8700"
        android:dividerHeight="2px"
        android:background="@drawable/background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewTaskName"
        android:layout_alignTop="@+id/viewTasks"
        android:layout_marginLeft="25dp"
        android:layout_alignLeft="@+id/viewTasks" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewTaskAssignee"
        android:layout_alignBottom="@+id/viewTaskName"
        android:layout_alignTop="@+id/viewTasks"
        android:layout_marginLeft="150dp" />


</RelativeLayout>